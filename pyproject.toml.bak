[build-system]
requires = ["setuptools>=68", "wheel"]
build-backend = "setuptools.build_meta"

[project]
name = "codex-demo"
version = "0.1.0"
description = "Demo CLI for Codex"
readme = "README.md"
requires-python = ">=3.11"
authors = [{ name = "James Covington", email = "jamesgcovington@icloud.com" }]
license = { text = "MIT" }
keywords = ["codex", "demo", "cli"]

[project.scripts]
codex-demo = "app:main"

[tool.black]
line-length = 88
target-version = ["py311"]

[tool.ruff]
line-length = 88
target-version = "py311"
extend-select = ["I"]
